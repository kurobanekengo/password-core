{
  "compilerOptions": {
    //"allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@api/*": ["source/api/*"],
      "@model/*": ["source/model/*"],
      "@config/*": ["source/config/*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "exclude": [
    "node_modules"
  ]
}